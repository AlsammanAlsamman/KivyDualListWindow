#:kivy 1.11.0

<DualListBox>:
    GridLayout:
        cols:1
        rows:2
        # fill the whole screen
        size: root.size
        GridLayout:
            cols: 3
            rows: 1
            BoxLayout:
                size: root.size
                orientation: 'vertical'
                size_hint_y: None
                # height: 100
                Label:
                    size_hint_y: 0.1
                    text: "Source"
                ScrollView:
                    pos: 0, 0
                    scroll_y: 1
                    size_hint_y: 0.9
                    scroll_type: ['bars', 'content']
                    canvas.before:
                        Color: #light grey
                            rgba: 0.753, 0.753, 0.753, 1
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    do_scroll_x: False
                    do_scroll_y: True
                    # size: root.size
                    GridLayout:
                        size_hint_y: None
                        cols: 1
                        size_hint_y: self.minimum_height
                        padding: 1
                        spacing: 1
                        id: SourceBox
            BoxLayout:
                orientation: 'vertical'
                size_hint_x: 0.1
                Label:
                    size_hint_y: 0.25
                    text: ''
                Button:
                    text: '>>'
                    # on_release: root.MoveItem()
                Button:
                    text: '<<'
                    # on_release: root.MoveItem()

            BoxLayout:
                size: root.size
                orientation: 'vertical'
                size_hint_y: None
                # height: 100
                Label:
                    size_hint_y: 0.1
                    text: "Target"
                ScrollView:
                    pos: 0, 0
                    scroll_y: 1
                    size_hint_y: 0.9
                    scroll_type: ['bars', 'content']
                    canvas.before:
                        Color: #light green
                            rgba: 0.678, 0.847, 0.902, 1
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    do_scroll_x: False
                    do_scroll_y: True
                    # size: root.size
                    GridLayout:
                        cols: 1
                        size_hint_y: self.minimum_height
                        padding: 1
                        spacing: 1
                        id: TargetBox
<BoxItem@BoxLayout>:
    # text: root.SubAdd
    size_hint_x: 0.1
    BoxLayout:
        # grey
        canvas.before:
            Color: #light grey
                rgba: 0.753, 0.753, 0.753, 1
            Rectangle:
                pos: self.pos
                size: self.size
        orientation: 'horizontal'
        Label:
            size_hint_x: 0.9
            text: root.ItemLabel
            # on_release: root.parent.remove_widget(root)
        Button:
            size_hint_x: 0.1
            text: root.SubAdd
            # on_release: root.parent.remove_widget(root)